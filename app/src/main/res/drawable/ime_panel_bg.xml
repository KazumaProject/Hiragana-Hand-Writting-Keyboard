<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft shadow -->
    <item
        android:bottom="2dp"
        android:left="10dp"
        android:right="2dp"
        android:top="10dp">
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <solid android:color="@color/clay_shadow" />
            <alpha android:alpha="0.25" />
        </shape>
    </item>

    <!-- Highlight -->
    <item
        android:bottom="10dp"
        android:left="2dp"
        android:right="10dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <solid android:color="@color/clay_highlight" />
            <alpha android:alpha="0.55" />
        </shape>
    </item>

    <!-- Main surface -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <solid android:color="@color/clay_surface" />
        </shape>
    </item>

</layer-list>
