<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- shadow -->
    <item
        android:bottom="1dp"
        android:left="6dp"
        android:right="1dp"
        android:top="6dp">
        <shape>
            <corners android:radius="14dp" />
            <solid android:color="@color/clay_shadow" />
            <alpha android:alpha="0.22" />
        </shape>
    </item>

    <!-- highlight -->
    <item
        android:bottom="6dp"
        android:left="1dp"
        android:right="6dp"
        android:top="1dp">
        <shape>
            <corners android:radius="14dp" />
            <solid android:color="@color/clay_highlight" />
            <alpha android:alpha="0.55" />
        </shape>
    </item>

    <!-- surface -->
    <item>
        <shape>
            <corners android:radius="14dp" />
            <solid android:color="@color/clay_button_surface" />
            <stroke android:color="@color/clay_text" android:width="1dp" />
        </shape>
    </item>

</layer-list>
