<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/handwriteRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- 手書き入力エリア（上下2面） -->
    <com.kazumaproject.hiraganahandwritekeyboard.hand_writting.ui.DualDrawingComposerView
        android:id="@+id/dualDrawing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- 共通キー行（Space/Enter/Backspace/Clear） -->
    <com.kazumaproject.hiraganahandwritekeyboard.input_method.ui.widgets.KeyboardKeyRowsView
        android:id="@+id/keyRows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

</LinearLayout>
