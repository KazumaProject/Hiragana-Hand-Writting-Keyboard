<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clay_bg"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/drawingRow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="0dp">

        <com.kazumaproject.hiraganahandwritekeyboard.hand_writting.ui.DrawingView
            android:id="@+id/drawingViewA"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clay_canvas_bg" />

        <com.kazumaproject.hiraganahandwritekeyboard.hand_writting.ui.DrawingView
            android:id="@+id/drawingViewB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clay_canvas_bg" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/candidateList"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/clay_canvas_bg_square"
        android:overScrollMode="never"
        android:scrollbars="none" />

</LinearLayout>
