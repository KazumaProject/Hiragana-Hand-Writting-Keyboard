<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- 上段: DrawingView を横並び（A/B） -->
    <LinearLayout
        android:id="@+id/drawingRow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="0dp">

        <com.kazumaproject.hiraganahandwritekeyboard.hand_writting.ui.DrawingView
            android:id="@+id/drawingViewA"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white" />

        <com.kazumaproject.hiraganahandwritekeyboard.hand_writting.ui.DrawingView
            android:id="@+id/drawingViewB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white" />

    </LinearLayout>

    <!-- 下段: 候補リストは 1つだけ。横幅をフルに使える -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/candidateList"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:overScrollMode="never"
        android:scrollbars="none" />

</LinearLayout>
