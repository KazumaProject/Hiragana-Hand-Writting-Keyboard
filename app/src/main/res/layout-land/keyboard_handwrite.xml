<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/handwriteRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/handwrite_root_padding_land">

    <com.kazumaproject.hiraganahandwritekeyboard.hand_writting.ui.DualDrawingComposerView
        android:id="@+id/dualDrawing"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/handwrite_dual_margin_land"
        android:minHeight="@dimen/handwrite_dual_min_height_land"
        app:layout_constraintBottom_toTopOf="@id/keyRowsBottom"
        app:layout_constraintEnd_toStartOf="@id/keyRowsRight"
        app:layout_constraintStart_toEndOf="@id/keyRowsLeft"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <com.kazumaproject.hiraganahandwritekeyboard.input_method.ui.widgets.KeyboardKeyRowsView
        android:id="@+id/keyRowsLeft"
        android:layout_width="@dimen/handwrite_side_width_land"
        android:layout_height="0dp"
        android:gravity="top"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="@id/dualDrawing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/dualDrawing" />

    <com.kazumaproject.hiraganahandwritekeyboard.input_method.ui.widgets.KeyboardKeyRowsView
        android:id="@+id/keyRowsRight"
        android:layout_width="@dimen/handwrite_side_width_land"
        android:layout_height="0dp"
        android:gravity="top"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="@id/dualDrawing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/dualDrawing" />

    <com.kazumaproject.hiraganahandwritekeyboard.input_method.ui.widgets.KeyboardKeyRowsView
        android:id="@+id/keyRowsBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/handwrite_bottom_min_height_land"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/dualDrawing"
        app:layout_constraintStart_toStartOf="@id/dualDrawing"
        app:layout_constraintTop_toBottomOf="@id/dualDrawing" />

</androidx.constraintlayout.widget.ConstraintLayout>
